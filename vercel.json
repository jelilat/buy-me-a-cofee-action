{
  "version": 2,
  "builds": [
    { "src": "api/tip.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/tip", "dest": "/api/tip.ts" },
    { "src": "/api/tip/(.*)", "dest": "/api/tip.ts" },
    { "src": "^/$", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}